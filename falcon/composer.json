{
    "name": "abenevaut/falcon",
    "description": "The Laravel Falcon Framework.",
    "keywords": ["framework", "laravel", "falcon"],
    "homepage": "https://kessel.abenevaut.dev",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/abenevaut/falcon/issues",
        "source": "https://github.com/abenevaut/falcon"
    },
    "authors": [
        {
            "name": "Antoine Benevaut",
            "email": "contact@abenevaut.dev"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel-zero/framework": "^10.2"
    },
    "require-dev": {
        "laravel/pint": "^1.10.6",
        "phpstan/phpstan": "^1.10.28"
    },
    "autoload": {
        "psr-4": {
            "Falcon\\Framework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "pint --ansi",
        "test:lint": "pint --test --ansi",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:types",
            "@test:lint",
            "@test:unit"
        ]
    }
}
